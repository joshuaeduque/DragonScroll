<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        app:key="dark_mode_preference"
        app:summary="@string/dark_mode_summary"
        app:title="@string/dark_mode_title" />

    <SwitchPreferenceCompat
        app:key="high_contrast_preference"
        app:summary="@string/high_contrast_summary"
        app:title="@string/high_contrast_title" />

    <ListPreference
        app:entries="@array/text_size_entries"
        app:entryValues="@array/text_size_values"
        app:key="text_size_preference"
        app:summary="@string/text_size_summary"
        app:title="@string/text_size_title" />

    <ListPreference
        app:entries="@array/themes_entries"
        app:entryValues="@array/themes_values"
        app:key="@string/themes_preference_key"
        app:summary="@string/themes_summary"
        app:title="@string/themes_title" />

    <Preference
        app:key="@string/clear_prefs_key"
        app:summary="@string/clear_prefs_summary"
        app:title="@string/clear_prefs_title" />

    <Preference
        app:key="nuke_db_preference"
        app:summary="Nuke Room database"
        app:title="Nuke Database" />

</PreferenceScreen>